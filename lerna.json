{
  "packages": [
    "packages/*"
  ],
  "version": "3.0.22",
  "command": {
    "publish": {
      "ignoreChanges": [
        "*.md"
      ],
      "message": "chore(release): %s"
    },
    "version": {
      "allowBranch": [
        "main",
        "version/*"
      ]
    },
    "bootstrap": {
      "npmClientArgs": [
        "--no-package-lock"
      ]
    }
  }
}
