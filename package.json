{
  "name": "root",
  "version": "0.0.0",
  "author": {
    "name": "Patrick Kollitsch",
    "email": "patrick@davids-neighbour.com",
    "web": "https://davids-neighbour.com"
  },
  "devDependencies": {
    "@dnb-org/all": "3.3.11",
    "lerna": "4.0.0",
    "lerna-wizard": "1.1.1",
    "rimraf": "3.0.2"
  },
  "npmClient": "npm",
  "packages": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "changed": "lerna changed --all --long",
    "clean": "run-p clean:logs clean:packages",
    "clean:logs": "rimraf logs && rimraf lerna-debug.log",
    "clean:modules": "rimraf node_modules && rimraf package-lock.json",
    "clean:packages": "rimraf packages/*/node_modules && rimraf packages/*/package-lock.json",
    "diff": "lerna diff",
    "exec": "lerna exec --no-bail --profile --profile-location=logs/profile/",
    "info": "lerna info",
    "list": "lerna list --all --long",
    "release": "lerna-wizard",
    "remark": "remark",
    "textlint": "textlint",
    "textlint:fix": "textlint --fix",
    "version": "",
    "dep-update": "npm run exec -- 'npm-check-updates -u' && npm-check-updates -u && npm run bootstrap"
  }
}
