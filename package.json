{
  "name": "root",
  "version": "0.0.0",
  "devDependencies": {
    "@dnb-org/tools": "3.0.13",
    "lerna": "4.0.0",
    "lerna-wizard": "1.1.1",
    "rimraf": "3.0.2"
  },
  "npmClient": "npm",
  "packages": [
    "packages/*"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "changed": "lerna changed --all --long",
    "clean": "run-p clean:*",
    "clean:logs": "rimraf logs && rimraf lerna-debug.log",
    "clean:modules": "rimraf node_modules && rimraf package-lock.json",
    "clean:packages": "rimraf packages/*/node_modules && rimraf packages/*/package-lock.json",
    "diff": "lerna diff",
    "exec": "lerna exec --no-bail --profile --profile-location=logs/profile/",
    "info": "lerna info",
    "list": "lerna list --all --long",
    "postinstall": "lerna exec -- npm install",
    "release": "",
    "version": ""
  }
}
